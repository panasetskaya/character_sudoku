<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CharacterSudoku" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:buttonStyle">@style/simpleButtonStyle</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>

    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>

    </style>


    <style name="sudokuButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="fontFamily">@font/ma_shan_zheng</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="simpleButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="simpleSmallerButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="simpleSmallerButtonStyleNoCaps" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">25sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="smallButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="secondaryButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="backdropButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SudokuBackDrop" parent="">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="Widget.Sudoku.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">?theme</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
        <item name="titleTextAppearance">@style/TextAppearance.Sudoku.Toolbar</item>
    </style>

    <style name="Widget.Sudoku.ToolbarNoTitle" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">?theme</item>
        <item name="showTitle">false</item>
        <item name="titleTextColor">@color/primaryColor</item>
    </style>

    <style name="TextAppearance.Sudoku.Toolbar" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="actionMenuTextColor">@color/primaryTextColor</item>
    </style>

    <style name="SettingsNavItemTextView">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PrettyButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryLightColor</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PrettyButtonNoBackgroundTint" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextButtonNoBackgroundTint" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>