<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CharacterSudoku" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:buttonStyle">@style/sudokuButtonStyle</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="sudokuButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="smallButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="secondaryButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="backdropButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SudokuBackDrop" parent="">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>