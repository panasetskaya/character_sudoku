<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/gameFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.panasetskaia.charactersudoku.presentation.fragments.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game">
        <action
            android:id="@+id/action_gameFragment_to_dictionaryFragment"
            app:destination="@id/dictionaryFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/dictionaryFragment"
        android:name="com.panasetskaia.charactersudoku.presentation.fragments.DictionaryFragment"
        android:label="fragment_dictionary"
        tools:layout="@layout/fragment_dictionary">
        <action
            android:id="@+id/action_dictionaryFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/dictionaryFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_dictionaryFragment_to_singleCharacterFragment"
            app:destination="@id/singleCharacterFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/dictionaryFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/singleCharacterFragment"
        android:name="com.panasetskaia.charactersudoku.presentation.fragments.SingleCharacterFragment"
        android:label="fragment_single_character"
        tools:layout="@layout/fragment_single_character">
        <argument
            android:name="chinese"
            app:argType="com.panasetskaia.charactersudoku.domain.entities.ChineseCharacter" />
        <action
            android:id="@+id/action_singleCharacterFragment_to_dictionaryFragment"
            app:destination="@id/dictionaryFragment" />
    </fragment>
</navigation>